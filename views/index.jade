block content
  p Main page
  if (everyauth.loggedIn)
   if (everyauth.user.type===0)
    p Witaj studencie
   else
    p Witaj wykladowco
  else
    .conatiner.span3
     if (errors)
      .alert.alert-error
       p #{errors}
     form.form-signin(action='/login', method='post')
